<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
>
    <testsuites>
        <testsuite name="Unit">
            <file>./tests/Unit/AtividadeFormatadorTest.php</file>
            <file>./tests/Unit/UserRolesTest.php</file>
            <file>./tests/Unit/BelongsToTenantMockTest.php</file>
            <file>./tests/Unit/UtilsTest.php</file>
            <file>./tests/Unit/StringUtilsTest.php</file>
            <file>./tests/Unit/ArrayUtilsTest.php</file>
            <file>./tests/Unit/DateTimeUtilsTest.php</file>
            <file>./tests/Unit/ExampleTest.php</file>
            <file>./tests/Unit/AtividadeBusinessLogicTest.php</file>
            <file>./tests/Unit/ContactoServiceTest.php</file>
            <file>./tests/Unit/EntidadeClassificacaoTest.php</file>
            <file>./tests/Unit/KpiReportingServiceTest.php</file>
            <file>./tests/Unit/FunnelSalesAnalysisTest.php</file>
            <file>./tests/Unit/ClientFollowupStrategyTest.php</file>
            <file>./tests/Unit/MarketingAutomationTest.php</file>
        </testsuite>
        <testsuite name="Feature">
            <file>./tests/Feature/ControllerViewTest.php</file>
            <file>./tests/Feature/RouteExistsTest.php</file>
            <file>./tests/Feature/ViewRenderTest.php</file>
        </testsuite>
    </testsuites>
    <source>
        <include>
            <directory>app</directory>
        </include>
    </source>
    <php>
        <env name="APP_ENV" value="testing"/>
        <env name="APP_MAINTENANCE_DRIVER" value="file"/>
        <env name="BCRYPT_ROUNDS" value="4"/>
        <env name="CACHE_STORE" value="array"/>
        <env name="DB_CONNECTION" value="sqlite"/>
        <env name="DB_DATABASE" value=":memory:"/>
        <env name="MAIL_MAILER" value="array"/>
        <env name="PULSE_ENABLED" value="false"/>
        <env name="QUEUE_CONNECTION" value="sync"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="TELESCOPE_ENABLED" value="false"/>
    </php>
</phpunit>
